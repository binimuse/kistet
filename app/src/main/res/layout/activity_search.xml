<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.binim.kistetevent.Search">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/uuuu"
    android:gravity="top"
    android:onClick="Onserch">

</LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="245dp"
        android:text="I want to go out"
        android:layout_marginLeft="25dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/blue_grey_300" />
    <AutoCompleteTextView
        android:layout_width="200dp"
        android:editable="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:hint=""
        android:text="Anytime"
        android:id="@+id/auto1"
        android:textColor="@color/overlay_dark_90"
        android:textStyle="bold"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="25dp"
        android:text="In"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/blue_grey_300" />

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="Addis ababa"
        android:id="@+id/auto2"
        android:editable="false"
        android:layout_marginLeft="20dp"
        android:textColor="@color/overlay_dark_90"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="445dp"

        android:text="And i'm up for"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/blue_grey_300" />

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="20dp"
        android:text="Anything"
        android:id="@+id/auto3"
        android:editable="false"
        android:textColor="@color/overlay_dark_90"
        android:textStyle="bold"
        android:textSize="30dp"/>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="565dp"
        android:layout_marginLeft="300dp"
        android:clickable="true"
        android:text="PRIMARY"
        android:id="@+id/button"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:rippleColor="@color/grey_5"
        app:srcCompat="@drawable/ic_arrow_right" />


    <com.luseen.spacenavigation.SpaceNavigationView

        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_alignParentBottom="true"
        app:active_item_color="@color/colorPrimary"
        app:centre_button_color="@color/colorPrimary"
        app:inactive_item_color="@color/overlay_dark_90"
        app:inactive_centre_button_icon_color="@color/overlay_light_90"
        app:space_background_color="@color/white_with_alpha"
        app:centre_button_icon="@drawable/ic_home_black_24dp"
        app:space_item_icon_size="@dimen/space_item_icon_default_size"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size"
        />


</RelativeLayout>
